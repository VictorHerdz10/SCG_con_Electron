{
  "name": "sgc-con-electron",
  "version": "0.2.0",
  "description": "Sistema de Gesti贸n de Contratos (SGC) - Aplicaci贸n de escritorio para la gesti贸n de contratos",
  "author": "Victor Hernandez Salcedo",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm run dev-frontend\" \"set NODE_ENV=development&& electron .\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev-frontend": "cd frontend && npm run dev",
    "build-frontend": "cd frontend && npm run build",
    "start-production": "npm run build-frontend && electron .",
    "package": "npm run build-frontend && electron-builder --win"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^36.0.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.direcciondeservicios.sgc",
    "productName": "SGC",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "extraResources": [
      {
        "from": "mongodb-bin/mongod.exe",
        "to": "mongodb-bin/mongod.exe"
      },
      {
        "from": ".env.production",
        "to": "app.env"
      }
    ],
    "asar": true,
    "files": [
      "**/*",
      "!**/node_modules/**",
      "!mongodb-bin/**/*",
      "!data/**/*",
      "!.env",
      "backend/node_modules/**"
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Sistema de Gesti贸n de Contratos",
      "deleteAppDataOnUninstall": false
    }
  }
}
